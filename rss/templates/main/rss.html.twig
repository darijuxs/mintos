{% extends 'base.html.twig' %}

{% block title %}RSS!{% endblock %}

{% block body %}

    <h1 class="h3 mb-3 font-weight-normal">Hello!</h1>

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('security_logout') }}">Logout</a>
        </div>
        <br/><br/>
    {% endif %}

    {% for entry in feedEntries %}
        <hr>
        <h3>{{ entry.title|e }}</h3>
        <p>{{ entry.originalSummary|raw }}</p>
    {% endfor %}

{% endblock %}
